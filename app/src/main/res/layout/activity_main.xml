<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#42424A"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buton0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/tusTakimi"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/buton2"
        app:layout_constraintTop_toBottomOf="@+id/buton2" />

    <Button
        android:id="@+id/buton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/tusTakimi"
        android:text="3"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/buton6"
        app:layout_constraintTop_toBottomOf="@+id/buton6" />

    <Button
        android:id="@+id/buton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/tusTakimi"
        android:text="8"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/buton9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buton7"
        app:layout_constraintTop_toTopOf="@+id/buton7" />

    <Button
        android:id="@+id/buton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/tusTakimi"
        android:text="1"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/buton4"
        app:layout_constraintTop_toBottomOf="@+id/buton4" />

    <EditText
        android:id="@+id/textHesap"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#8C8C8C"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="0"

        android:textSize="52sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/butonSifirla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button"

        android:text="C"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/buton7"
        app:layout_constraintEnd_toStartOf="@+id/butonSil"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/butonSil" />

    <Button
        android:id="@+id/butonSil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/button"
        android:text="v"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/butonCarpma"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/butonSifirla"
        app:layout_constraintStart_toStartOf="@+id/buton8"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/tusTakimi"
        android:text="7"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/buton8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butonSifirla" />

    <Button
        android:id="@+id/buton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/tusTakimi"
        android:text="4"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/buton7"
        app:layout_constraintTop_toBottomOf="@+id/buton7" />

    <Button
        android:id="@+id/buton9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/tusTakimi"
        android:text="9"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/butonToplama"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buton8"
        app:layout_constraintTop_toTopOf="@+id/buton8" />

    <Button
        android:id="@+id/buton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/tusTakimi"
        android:text="5"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/buton8"
        app:layout_constraintTop_toBottomOf="@+id/buton8" />

    <Button
        android:id="@+id/buton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/tusTakimi"
        android:text="6"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/buton9"
        app:layout_constraintTop_toBottomOf="@+id/buton9" />

    <Button
        android:id="@+id/buton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/tusTakimi"
        android:text="2"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/buton5"
        app:layout_constraintTop_toBottomOf="@+id/buton5" />

    <Button
        android:id="@+id/butonSonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:text="="
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/buyonBolme"
        app:layout_constraintTop_toBottomOf="@+id/buyonBolme" />

    <Button
        android:id="@+id/butonToplama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/islemTakimlari"
        android:text="+"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buton9"
        app:layout_constraintTop_toTopOf="@+id/buton9" />

    <Button
        android:id="@+id/butonCikarma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/islemTakimlari"
        android:text="-"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/butonToplama"
        app:layout_constraintTop_toTopOf="@+id/buton6" />

    <Button
        android:id="@+id/buyonBolme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/islemTakimlari"
        android:text="/"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/butonCikarma"
        app:layout_constraintTop_toTopOf="@+id/buton3" />

    <Button
        android:id="@+id/butonCarpma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/islemTakimlari"
        android:text="*"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/butonToplama"
        app:layout_constraintStart_toStartOf="@+id/butonToplama" />

    <TextView
        android:id="@+id/debugText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/buton0"
        app:layout_constraintTop_toBottomOf="@+id/buton0" />

</androidx.constraintlayout.widget.ConstraintLayout>